# Base paths
DATA_DIR=data
SOURCE_FILE=docs/gmail_pytest_suite.py
FAISS_DIR=${DATA_DIR}/faiss
CHUNKS_DIR=${DATA_DIR}/chunks
EVAL_DIR=${DATA_DIR}/eval

# Chunking
CHUNK_LANGUAGE=python
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Embeddings / Retrieval
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM (OpenRouter)
# Obtain an API key from https://openrouter.ai/
OPENROUTER_API_KEY=
OPENROUTER_MODEL=nvidia/nemotron-nano-9b-v2:free
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Generation parameters used by DVC stage
GEN_QUESTION=testcase for blank password validation
GEN_K=3

# Diagnostics
DEBUG=false
